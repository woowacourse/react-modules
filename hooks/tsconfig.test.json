{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["jest", "node", "react", "react-dom"],
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/**/*"
  ]
}
