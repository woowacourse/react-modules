{
  "compilerOptions": {
    "emitDeclarationOnly": true, // JS 없이 d.ts만
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src/lib",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": ["react", "react-dom", "node"] // JSX·DOM 타입
  },
  "exclude": ["node_modules", "**/__tests__", "**/*.test.ts", "**/*.test.tsx"],
  "include": ["src/lib/**/*"]
}
